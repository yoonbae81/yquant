@using yQuant.App.Dashboard.Services
@inject SystemHealthService HealthService
@implements IDisposable

<div class="d-flex gap-2 align-center">
    <MudTooltip Text="Redis">
        <MudIcon Icon="@Icons.Material.Filled.Circle" Color="@(_redisOnline ? Color.Success : Color.Error)"
            Size="Size.Small" />
    </MudTooltip>

    <MudTooltip Text="BrokerGateway">
        <MudIcon Icon="@Icons.Material.Filled.Router" Color="@(_brokerOnline ? Color.Success : Color.Error)"
            Size="Size.Small" />
    </MudTooltip>

    <MudTooltip Text="OrderComposer">
        <MudIcon Icon="@Icons.Material.Filled.Calculate" Color="@(_composerOnline ? Color.Success : Color.Error)"
            Size="Size.Small" />
    </MudTooltip>

    <MudTooltip Text="Webhook">
        <MudIcon Icon="@Icons.Material.Filled.Webhook" Color="@(_webhookOnline ? Color.Success : Color.Error)"
            Size="Size.Small" />
    </MudTooltip>
</div>

@code {
    private bool _redisOnline;
    private bool _brokerOnline;
    private bool _composerOnline;
    private bool _webhookOnline;
    private PeriodicTimer? _timer;
    private CancellationTokenSource _cts = new();

    protected override void OnInitialized()
    {
        _timer = new PeriodicTimer(TimeSpan.FromSeconds(5));
        _ = RunHealthCheckLoop();
    }

    private async Task RunHealthCheckLoop()
    {
        while (await _timer!.WaitForNextTickAsync(_cts.Token))
        {
            await CheckHealth();
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task CheckHealth()
    {
        _redisOnline = await HealthService.CheckRedisAsync();
        if (_redisOnline)
        {
            _brokerOnline = await HealthService.CheckServiceAsync("BrokerGateway");
            _composerOnline = await HealthService.CheckServiceAsync("OrderComposer");
            _webhookOnline = await HealthService.CheckServiceAsync("Webhook");
        }
        else
        {
            _brokerOnline = false;
            _composerOnline = false;
            _webhookOnline = false;
        }
    }

    public void Dispose()
    {
        _cts.Cancel();
        _timer?.Dispose();
        _cts.Dispose();
    }
}

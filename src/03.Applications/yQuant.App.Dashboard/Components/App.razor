<!DOCTYPE html>
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var pathBase = Configuration.GetValue<string>("Dashboard:PathBase")?.TrimEnd('/');
    var baseHref = string.IsNullOrWhiteSpace(pathBase) ? "/" : $"{pathBase}/";
}
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="@baseHref" />
    <ResourcePreloader />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="yQuant.App.Dashboard.styles.css" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes @rendermode="RenderMode.InteractiveServer" />
    <ReconnectModal />
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
    <script>
        window.downloadFile = (filename, base64Content) => {
            const link = document.createElement('a');
            link.download = filename;
            link.href = 'data:application/octet-stream;base64,' + base64Content;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        };
        window.submitForm = (formId) => {
            document.getElementById(formId).submit();
        };
    </script>
</body>

</html>
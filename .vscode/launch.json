        {
            "name": "Console + Gateway",
            "configurations": [
                "yQuant.App.Console",
                "yQuant.App.BrokerGateway"
            ],
            "stopAll": true
        },
        {
            "name": "Dashboard + Gateway",
            "configurations": [
                "yQuant.App.Dashboard",
                "yQuant.App.BrokerGateway"
            ],
